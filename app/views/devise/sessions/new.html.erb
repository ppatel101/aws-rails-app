<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h2 align = "center">Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
          <div class="mb-3">
            <%= f.label :email , class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control form-control-lg" %>
          </div>
          <div class="mb-3">
            <%= f.label :password , class: "form-label" %><br />
            <%= f.password_field :password, autocomplete: "current-password" , class: "form-control form-control-lg" %>
          </div>
          <div class="text-center">
            <%= f.submit "Sign in", class: "btn btn-primary" %>
          </div>
          <div class="text-center">
            <p>Not have an account? <%= render "devise/shared/links" %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>      

