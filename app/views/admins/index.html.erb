<%= render 'pages/admin_nav' %>
<div class="container">
  <table class="table">
    <thead>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
    </thead>
    <% @users.each do | user | %>
      <tbody>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= link_to 'download', rails_blob_path(user.file, disposition: "attachment"),  class:"btn btn-warning" if user.file.attached? %></td>
        <td><%= link_to 'view', rails_blob_path(user.file, disposition: "preview"),  class:"btn btn-success"if user.file.attached? %></td>
      </tbody>
    <% end %>
  </table>
</div>